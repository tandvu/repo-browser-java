<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tandvu.repobrowser.controller.MainController">
   <top>
      <!-- Split top area into two 50/50 columns: left = paths, right = filter + link -->
      <GridPane hgap="10.0" vgap="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <columnConstraints>
            <ColumnConstraints percentWidth="50.0" hgrow="ALWAYS" />
            <ColumnConstraints percentWidth="50.0" hgrow="ALWAYS" />
         </columnConstraints>

         <!-- Left column: Repository & Deployment paths stacked at the top -->
         <VBox GridPane.columnIndex="0" spacing="10.0">
            <children>
               <!-- Repository Path Selection -->
               <HBox alignment="CENTER_LEFT" spacing="8.0">
                  <children>
                     <Label text="Repository Path:" minWidth="120.0" />
                     <TextField fx:id="basePathField" promptText="Select repository path to browse" HBox.hgrow="ALWAYS" />
                     <Button fx:id="browseButton" text="Browse..." onAction="#handleBrowseButton" />
                  </children>
               </HBox>

               <!-- Deployment Path Selection -->
               <HBox alignment="CENTER_LEFT" spacing="8.0">
                  <children>
                     <Label text="Deployment Path:" minWidth="120.0" />
                     <TextField fx:id="deploymentPathField" promptText="Select deployment path for selected repositories" HBox.hgrow="ALWAYS" />
                     <Button fx:id="browseDeploymentButton" text="Browse..." onAction="#handleBrowseDeploymentButton" />
                  </children>
               </HBox>

               <!-- SOA Path (Read-only) -->
               <HBox alignment="CENTER_LEFT" spacing="8.0">
                  <children>
                     <Label text="SOA Path:" minWidth="120.0" />
                     <Label fx:id="soaPathLabel" text="C:/AMPT_DEV/TRMC_MODULE" styleClass="path-display" HBox.hgrow="ALWAYS" />
                  </children>
               </HBox>
            </children>
         </VBox>

         <!-- Right column: Filter label + Released on one line, TextArea below -->
         <VBox GridPane.columnIndex="1" spacing="8.0">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <children>
                     <Label text="Filter:" minWidth="60.0" />
                     <Hyperlink text="Release URL" onAction="#openReleasedLink" />
                     <Hyperlink text="How to Copy" onAction="#playHowToCopyVideo" />
                     <Region HBox.hgrow="ALWAYS" />
                     <Button text="Paste" onAction="#handlePasteFromClipboard" />
                     <Button text="Clear" onAction="#handleClearFilter" />
                  </children>
               </HBox>
               <TextArea fx:id="filterField"
                         promptText="Paste repository list (name&#9;version format)..."
                         wrapText="true"
                         prefHeight="180.0" />
            </children>
         </VBox>
      </GridPane>
   </top>
   
   <center>
      <!-- Main content area with Build Master button above table -->
      <VBox spacing="10.0">
         <children>
            <!-- Build Master Button positioned right above table -->
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               <children>
                  <Button fx:id="buildMasterButton" text="Build Master &amp; Deploy" onAction="#handleBuildMaster" prefWidth="160.0" />
                  <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh" prefWidth="80.0" />
                  <Button fx:id="toggleIgnoredButton" text="Hide Ignored Repos" onAction="#handleToggleIgnored" prefWidth="170.0" />
               </children>
            </HBox>
            
            <!-- Main content area with StackPane to overlay table and build log -->
            <StackPane VBox.vgrow="ALWAYS">
               <children>
                  <!-- Repository Table -->
                  <TableView fx:id="repoTable" tableMenuButtonVisible="true">
                     <columns>
                        <TableColumn fx:id="selectedColumn" text="Selected" prefWidth="80.0" resizable="false" />
                        <TableColumn fx:id="ignoredColumn" text="Ignored" prefWidth="80.0" resizable="false" />
                        <TableColumn fx:id="nameColumn" text="Repository Name" prefWidth="200.0" />
                        <TableColumn fx:id="repoVersionColumn" text="Repo Version" prefWidth="100.0" />
                        <TableColumn fx:id="targetedVersionColumn" text="Targeted Version" prefWidth="120.0" />
                        <TableColumn fx:id="deploymentVersionColumn" text="Deployment Version" prefWidth="140.0" />
                        <TableColumn fx:id="deploymentModifiedColumn" text="Date Modified" prefWidth="160.0" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>

                  <!-- Build Log (Initially Hidden) -->
                  <VBox fx:id="buildLogContainer" visible="false" spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label fx:id="buildStatusLabel" text="Building..." style="-fx-font-weight: bold;" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="backToTableButton" text="Back to Table" onAction="#handleBackToTable" />
                           </children>
                        </HBox>
                        <TextArea fx:id="buildLogArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" 
                                  text="Ready for build..." 
                                  style="-fx-font-family: 'Courier New', monospace; -fx-font-size: 12px;" />
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </children>
      </VBox>
   </center>
   
   <bottom>
      <!-- Status Bar -->
      <VBox spacing="5.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
               <Label fx:id="statusLabel" text="Ready" />
               <Region HBox.hgrow="ALWAYS" />
               <ProgressBar fx:id="progressBar" prefWidth="200.0" visible="false" />
            </children>
         </HBox>
         
         <Separator />
      </VBox>
   </bottom>
</BorderPane>