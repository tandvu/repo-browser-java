<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tandvu.repobrowser.controller.MainController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         
         <!-- Repository Path Selection -->
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
               <Label text="Repository Path:" minWidth="100.0" />
               <TextField fx:id="basePathField" prefWidth="400.0" promptText="Select repository path to browse" />
               <Button fx:id="browseButton" text="Browse..." onAction="#handleBrowseButton" />
            </children>
         </HBox>
         
         <!-- Deployment Path Selection -->
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
               <Label text="Deployment Path:" minWidth="100.0" />
               <TextField fx:id="deploymentPathField" prefWidth="400.0" promptText="Select deployment path for selected repositories" />
               <Button fx:id="browseDeploymentButton" text="Browse..." onAction="#handleBrowseDeploymentButton" />
            </children>
         </HBox>
         
         <!-- Filter and Controls -->
         <HBox alignment="TOP_LEFT" spacing="10.0">
            <children>
               <Label text="Filter:" minWidth="80.0" />
               <TextArea fx:id="filterField" prefWidth="200.0" prefHeight="60.0" promptText="Paste repository list (name&#9;version format)..." wrapText="true" />
               <Region HBox.hgrow="ALWAYS" />
               <VBox spacing="5.0">
                  <children>
                     <Button fx:id="selectAllButton" text="Select All" onAction="#handleSelectAll" />
                     <Button fx:id="clearAllButton" text="Clear All" onAction="#handleClearAll" />
                  </children>
               </VBox>
            </children>
         </HBox>
      </VBox>
   </top>
   
   <center>
      <!-- Repository Table -->
      <TableView fx:id="repoTable" tableMenuButtonVisible="true">
         <columns>
            <TableColumn fx:id="selectedColumn" text="Selected" prefWidth="80.0" resizable="false" />
            <TableColumn fx:id="nameColumn" text="Repository Name" prefWidth="200.0" />
            <TableColumn fx:id="repoVersionColumn" text="Repo Version" prefWidth="100.0" />
            <TableColumn fx:id="targetedVersionColumn" text="Targeted Version" prefWidth="120.0" />
            <TableColumn fx:id="pathColumn" text="Path" prefWidth="300.0" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   
   <bottom>
      <!-- Status Bar -->
      <VBox spacing="5.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
               <Label fx:id="statusLabel" text="Ready" />
               <Region HBox.hgrow="ALWAYS" />
               <ProgressBar fx:id="progressBar" prefWidth="200.0" visible="false" />
            </children>
         </HBox>
         
         <Separator />
      </VBox>
   </bottom>
</BorderPane>