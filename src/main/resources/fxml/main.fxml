<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tandvu.repobrowser.controller.MainController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         
         <!-- Base Path Selection -->
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
               <Label text="Base Path:" minWidth="80.0" />
               <TextField fx:id="basePathField" prefWidth="400.0" promptText="Select base path to scan for repositories" />
               <Button fx:id="browseButton" text="Browse..." onAction="#handleBrowseButton" />
               <Button fx:id="scanButton" text="Scan" onAction="#handleScanButton" styleClass="primary-button" />
            </children>
         </HBox>
         
         <!-- Filter and Controls -->
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
               <Label text="Filter:" minWidth="80.0" />
               <TextField fx:id="filterField" prefWidth="200.0" promptText="Filter repositories by name..." />
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="selectAllButton" text="Select All" onAction="#handleSelectAll" />
               <Button fx:id="clearAllButton" text="Clear All" onAction="#handleClearAll" />
            </children>
         </HBox>
      </VBox>
   </top>
   
   <center>
      <!-- Repository Table -->
      <TableView fx:id="repoTable" tableMenuButtonVisible="true">
         <columns>
            <TableColumn fx:id="selectedColumn" text="Selected" prefWidth="80.0" resizable="false" />
            <TableColumn fx:id="nameColumn" text="Repository Name" prefWidth="200.0" />
            <TableColumn fx:id="pathColumn" text="Path" prefWidth="400.0" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   
   <bottom>
      <!-- Status Bar -->
      <VBox spacing="5.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
               <Label fx:id="statusLabel" text="Ready" />
               <Region HBox.hgrow="ALWAYS" />
               <ProgressBar fx:id="progressBar" prefWidth="200.0" visible="false" />
            </children>
         </HBox>
         
         <Separator />
      </VBox>
   </bottom>
</BorderPane>